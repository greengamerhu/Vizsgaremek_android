<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/bgBlack"
    app:cardCornerRadius="20dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/purple"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeHolderasd"
            android:layout_gravity="center_horizontal"

            android:layout_marginHorizontal="50dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30dp"
            android:id="@+id/textViewDialogTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeHolder"
            android:layout_marginHorizontal="100dp"
            android:textColor="@color/purple"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:id="@+id/textViewDialogStatusCode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDialogTitle"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="erroaaaaaaaaaaaaaaar1\nerror2"
            android:id="@+id/textViewDialogMessage"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="10dp"

            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"

            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDialogStatusCode"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDialogOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/gradient"
            android:layout_marginBottom="10dp"
            android:text="Ok"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:cornerRadius="10dp"
            android:layout_gravity="center_horizontal"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDialogMessage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>